<dataConfig>
  <dataSource 
	    name="mydb"
	    type="JdbcDataSource"
            driver="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/laravel?serverTimezone=UTC"
            user="root"
            password="" /> 

  <dataSource type="BinFileDataSource" name="data"/>

  <document>
    
   <entity name="search" dataSource="mydb" query="select id as 'id', title, name, description, type, path_file, user_id from files;" >
	
	<field column="path_file" name="path_file" />
	<field column="name" name="name" />

	<entity name="user" dataSource="mydb" query="select name from users where id=${search.user_id};" >
	<field column="name" name="user_name" />
	</entity>

	<entity name="file" 
                    dataSource="data" 
		    onError="skip"
                    processor="TikaEntityProcessor" 
                    url="${search.path_file}" 

                    format="text">
              
             <field column="text" name="text" />  
              
             </entity>
	</entity>

	
  </document>
</dataConfig>